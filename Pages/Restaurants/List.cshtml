@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}


<h1>Restaurants List</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input class="form-control"
                   type="search"
                   name="searchTerm"
                   asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th>Cusine Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rs in Model.Restaurants)
        {
            <tr>
                <td>@rs.Id</td>
                <td>@rs.Name</td>
                <td>@rs.Location</td>
                <td>@rs.Cusine</td>
                <td>
                    <a class="btn btn-lg"
                       asp-page="./Detail"
                       asp-route-restaurantId="@rs.Id">
                        <i class="glyphicon glyphicon-zoom-in"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Model.Message